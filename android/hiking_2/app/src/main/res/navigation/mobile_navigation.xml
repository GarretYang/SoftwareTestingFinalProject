<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.hiking_2.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/single_page" />

    <fragment
        android:id="@+id/navigation_search"
        android:name="com.example.hiking_2.ui.search.SearchFragment"
        android:label="@string/title_search"
        tools:layout="@layout/fragment_search" />

    <fragment
        android:id="@+id/navigation_add"
        android:name="com.example.hiking_2.ui.add.AddFragment"
        android:label="@string/title_add"
        tools:layout="@layout/fragment_add" />

    <activity
        android:id="@+id/navigation_account"
        android:name="com.example.hiking_2.ui.account.LoginActivity"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" />
</navigation>